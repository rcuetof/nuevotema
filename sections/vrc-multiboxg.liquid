{{ 'buttons.css' | asset_url | stylesheet_tag }}
{% style %}
  .cont-guide {
    margin: auto;
    width: 90%;
    max-width: 980px;
    text-align: center;
    justify-content: center;
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: 300px auto 300px 300px;
    grid-template-areas: "tittleguide imgguide1" "textguide1 textguide1" "imgguide2 textguide3" "textguide2 imgguide3";

    div {
      color: #ffffff;
      font-weight: 800;
      background-position: center;
      background-size: cover;
      background-repeat: no-repeat;
      box-shadow: -1px 0 3px rgba(60, 59, 59, 0.164);
      padding: 20px;
      margin-left: 10px;
      text-align: left;
    }

  }

  svg {
    transform: translateY(0);
    transition: all 0.8s;
    cursor: pointer;
  }
  svg:hover {
    transform: rotate(90deg) translateX(2px);
  }

  /* Consulta de medios para pantallas m치s grandes (PC) */
  @media screen and (min-width: 769px) {
    .cont-guide {
      grid-template-columns: minmax(150px, 1fr) repeat(3, minmax(250px, 2fr));
      grid-template-rows: 370px auto;
      grid-template-areas: "tittleguide imgguide1 imgguide2 imgguide3" "textguide1 textguide1 textguide2 textguide3";
    }
    .textguide1 {
      margin-bottom: 0;
    }
    .textguide3 {
      border-radius: 0 0 5px 5px;
    }
    .imgguide3 {
      border-radius: 5px 5px 0 0;
    }
  }
  /* Consulta de medios para pantallas m치s chicas (MOVIL) */
  @media screen and (max-width: 768px) {
    .textguide1 {
      margin-bottom: 20px;
    }
    .textguide3 {
      border-radius: 5px 5px 0 0;
    }
    .imgguide3 {
      border-radius: 0 0 5px 5px;
    }
  }

  .tittleguide {
    grid-area: tittleguide;
    border-radius: 5px 0 0 0;
    font-size: {{ section.settings.tittleguide-size }}px;
    background-color: {{ section.settings.tittleguide-color }};

  }
  .imgguide1 {
    align-items: end;
    justify-items: start;
    grid-area: imgguide1;
    background-image: url('{{ section.settings.imgguide1 | image_url: width: 1050, height: 2590}}');
    border-radius: 0 5px 0 0;
    margin-left: 0 !important;

  }
  .textguide1 {
    grid-area: textguide1;
    border-radius: 0 0 5px 5px;
    background-color: {{ section.settings.textguide1-color }};
    font-size: {{ section.settings.textguide-size }}px;
  }
  .imgguide2 {
    align-items: end;
    justify-items: start;
    grid-area: imgguide2;
    background-image: url('{{ section.settings.imgguide2 | image_url: width: 1050, height: 2590}}');
    border-radius: 5px 5px 0 0;
  }
  .textguide2 {
    grid-area: textguide2;
    border-radius: 0 0 5px 5px;
    background-color: {{ section.settings.textguide2-color }};
    font-size: {{ section.settings.textguide-size }}px;
  }
  .imgguide3 {
    justify-items: start;
    grid-area: imgguide3;
    background-image: url('{{ section.settings.imgguide3 | image_url: width: 1050, height: 2590}}');

  }
  .textguide3 {
    grid-area: textguide3;
    background-color: {{ section.settings.textguide3-color }};
    font-size: {{ section.settings.textguide-size }}px;
  }
{% endstyle %}
{% if section.settings.tittleguide != blank %}
  <div class="cont-guide scroll-trigger animate--slide-in">
    {% if section.settings.tittleguide != blank %}
      <div class="tittleguide scroll-trigger animate--slide-in">{{ section.settings.tittleguide }}</div>
    {% endif %}
    {% if section.settings.imgguide1 != blank %}
      <div class="imgguide1 scroll-trigger animate--slide-in">
        <a href="{{ section.settings.textguide1-url }}">{% render 'vrc-arrowviollet' %}</a>
      </div>
    {% endif %}
    {% if section.settings.textguide1 != blank %}
      <div class="textguide1 scroll-trigger animate--slide-in">{{ section.settings.textguide1 }}<br><br><a class="btn" href="{{ section.settings.textguide1-url }}">{{ section.settings.textguide1-textbtn }}</a>
      </div>
    {% endif %}
    {% if section.settings.imgguide2 != blank %}
      <div class="imgguide2 scroll-trigger animate--slide-in">
        <a href="{{ section.settings.textguide2-url }}">{% render 'vrc-arrowviollet' %}</a>
      </div>
    {% endif %}
    {% if section.settings.textguide2 != blank %}
      <div class="textguide2 scroll-trigger animate--slide-in">{{ section.settings.textguide2 }}<br><br><a class="btn" href="{{ section.settings.textguide2-url }}">{{ section.settings.textguide2-textbtn }}</a>
      </div>
    {% endif %}
    {% if section.settings.imgguide3 != blank %}
      <div class="imgguide3 scroll-trigger animate--slide-in">
        <a href="{{ section.settings.textguide2-url }}">{% render 'vrc-arrowviollet' %}</a>
      </div>
    {% endif %}
    {% if section.settings.textguide3 != blank %}
      <div class="textguide3 scroll-trigger animate--slide-in">{{ section.settings.textguide3 }}<br><br><a class="btn" href="{{ section.settings.textguide3-url }}">{{ section.settings.textguide3-textbtn }}</a>
      </div>
    {% endif %}
  </div>
{% endif %}

