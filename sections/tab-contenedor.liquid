{{ 'tab-container.css' | asset_url | stylesheet_tag }}
<script src="{{ 'tab-container.js' | asset_url }}" defer="defer"></script>
<div class="page-width page-content">
  {% for block in section.blocks %}
    {% case block.type %}
    {% when 'section' %}
      <div class="tabs-container">
        {% if block.settings.categoria != blank  %}
            <div class="tab-buttons" id="tabContainer">
                <div class="tab" onclick="changeTab(1)" style="background-image: url('{{ block.settings.imagecat | url_decode }}');">{{ block.settings.categoria }}</div>
            </div>
        {% endif %}   
        {% if section.settings.contenido != blank %}
        <div id="content1" class="tab-content">
        <h3>{{ block.settings.categoria }}</h3>
        <p>{{ block.settings.parrafo }}</p>
        <a href="{{ block.settings.btnlink }}" class="btn">{{ block.settings.btbtxt }}</a></div>
        {% endif %}
    </div>
     {% endcase %}
  {% endfor %}
</div>


{% schema %}
{
  "name": "tab-tontainer",
  "blocks": [
    {
      "type": "section",
      "name": "Text",
      "settings": [
      {
        "type" : "text" ,
        "id" : "categoria" ,
        "label" : "Categoria" ,
        "default": "Introdusca de la Categoria"
      },
      {
       "type": "image_picker",
       "id": "imagecat",
       "label": "Imagen de Categoria"
      },
      {
        "type": "textarea",
        "id": "parrafo",
        "label": "Contenido de Contenedor"
      },
      {
        "type": "url",
        "id": "btnlink",
        "label": "URL"
      },
      {
        "type": "text",
        "id": "btntxt",
        "label": "Texto del Boton"
      }

    ]
    }
  ]
}
{% endschema %}




