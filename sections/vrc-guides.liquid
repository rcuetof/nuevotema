
{% style  %}
.cont-guide {
    width: 90%;
    max-width: 980px;
    margin: auto;
    text-align: center;
    justify-content: center;
    display: grid;
    grid-gap: 10px;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: auto auto auto;
    grid-template-areas: "tittleguide imgguide1"
                         "textguide1 textguide1"
                         "imgguide2 textguide2"
                         "textguide3 imgguide3";

div{
background-position: center;
background-size: cover;
background-repeat: no-repeat;
border-radius: 10px;
box-shadow: 0px 2px 5px solid rgba(0, 0, 0, 0.589);
}                         
}


/* Consulta de medios para pantallas m√°s grandes (PC) */
@media screen and (min-width: 768px) {
    .cont-guide {
        grid-template-columns: minmax(300px, 2fr) repeat(3, minmax(250px, 1fr));
        grid-template-rows: 370px 100px;
        grid-template-areas: "tittleguide imgguide1 imgguide2 imgguide3"
                            "textguide1 textguide1 textguide2 textguide3";
    }
}

.tittleguide{
   grid-area: tittleguide;
}
.imgguide1{
    grid-area: imgguide1;
}
.textguide1{
      grid-area: textguide1;
 }
.imgguide2{
    grid-area: imgguide2;
    background-image: url('https://cdn.shopify.com/s/files/1/0643/4789/8056/files/Fashion_3.png');    
}
.textguide2{
    grid-area: textguide2;
}
.imgguide3{
    grid-area:imgguide3;
}
.textguide3{
    grid-area: textguide3; 
}
{% endstyle %}
<div class="cont-guide">
    <div class="tittleguide">TITLE GUIDE</div>
    <div class="imgguide1">IMAGEN</div>
    <div class="textguide1">TEXT GUIDE</div>
    <div class="imgguide2">IMAGE GUIDE 2</div>
    <div class="textguide2">TEXT GUIDE 2</div>
    <div class="imgguide3">IMAGE GUIDE 3</div>
    <div class="textguide3">TEXT GUIDE 3</div>
</div>

