
{% style  %}
.cont-guide {
    width: 90%;
    max-width: 980px;
    margin: auto;
    text-align: center;
    justify-content: center;
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: 300px 100px 300px 300px;
    grid-template-areas: "tittleguide imgguide1"
                         "textguide1 textguide1"
                         "imgguide2 textguide2"
                         "textguide3 imgguide3";

div{
    color: #ffffff;
    font-weight: 800;
    background-color: rgba(179, 71, 189, 0.733);
    background-position: center;
    background-size: cover;
    background-repeat: no-repeat;
    box-shadow: 0px 0px 3px rgba(60, 59, 59, 0.164);
    padding: 20px;
    margin-left: 10px;
    text-align: left;
   }                         
}


/* Consulta de medios para pantallas más grandes (PC) */
@media screen and (min-width: 769px) {
    .cont-guide {
        grid-template-columns: minmax(150px, 1fr) repeat(3, minmax(250px, 2fr));
        grid-template-rows: 370px auto;
        grid-template-areas: "tittleguide imgguide1 imgguide2 imgguide3"
                            "textguide1 textguide1 textguide2 textguide3";
    }
    .textguide1{
        margin-bottom: 0px;   
   }
} 
/* Consulta de medios para pantallas más grandes (MOVIL) */
@media screen and (max-width: 768px) {
   .textguide1{
    margin-bottom: 20px;   
}
}

.tittleguide{
   grid-area: tittleguide;
   border-radius: 5px 0px 0px 0px;
}
.imgguide1{
    align-items: self-end;
    text-align: left;
    grid-area: imgguide1;
    background-image: url('https://cdn.shopify.com/s/files/1/0643/4789/8056/files/Fashion_3.png');
    border-radius: 0px 5px 0px 0px;       
    margin-left: 0px !important;  
}
.textguide1{
      grid-area: textguide1;
      border-radius: 0px 0px 5px 5px;
 }
.imgguide2{
    align-self: self-end;
    text-align: left;
    grid-area: imgguide2;
    background-image: url('https://cdn.shopify.com/s/files/1/0643/4789/8056/files/Fashion_3.png'); 
    border-radius: 5px 5px 0px 0px;   
}
.textguide2{
    grid-area: textguide2;
    border-radius: 0px 0px 5px 5px;
}
.imgguide3{
    align-self: self-end;
    text-align: left;
    grid-area:imgguide3;
    background-image: url('https://cdn.shopify.com/s/files/1/0643/4789/8056/files/Fashion_3.png');
    border-radius: 5px 5px 0px 0px;       
}
.textguide3{
    border-radius: 0px 0px 5px 5px;
    grid-area: textguide3; 
}
{% endstyle %}
