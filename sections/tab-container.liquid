{{ 'tab-container.css' | asset_url | stylesheet_tag }}
{% style %}
  .texttop {
    position: relative;
    left: 50%;
    top: -20%;
    transform: translateX(-50%);
    white-space: nowrap;
    width: 180px;

  }
  .textbtn {
    position: relative;
    transform: translateX(-50%);
    left: 50%;
    top: 80%;
    white-space: nowrap;
  }

{% endstyle %}


{%- assign tabn = 1 -%}
<div class="tabs-container">
  <div class="tab-buttons" id="tabContainer">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'text' %}
          {% if block.settings.title != blank %}
            <div
              class="tab"
              onclick="changeTab({{ tabn }})"
              {%- if block.settings.image != blank -%}
              style="background-image: url('{{ block.settings.image | image_url: width: 1150, height: 1750 }} ');"
              {% endif %}>
              <div class="texttop">
                <p>{{ block.settings.title }}</p>
              </div>
              <div class="textbtn">
                <p>Show More</p>
              </div>
            </div>
          {% endif %}
      {% endcase %}
      {%- assign tabn = tabn | plus: 1 -%}
    {% endfor %}
  </div>
  {%- assign tabn = 1 -%}
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'text' %}
        {% if block.settings.title != blank %}
          <div id="content{{ tabn }}" class="tab-content">
            <h3>{{ block.settings.title }}</h3>
            <a href="{{ block.settings.btn }}" class="btn">{{ block.settings.btntxt }}</a>
            <p>{{ block.settings.text }}</p>
            {% style %}
              .tab-content{
               img{
                border-radius: 5px;
                position: absolute;
                left: 50%;
                top:10%;
                transform: translateX(-50%);
                z-index: 1;
               }
               p{z-index: 3;}
              }
            {% endstyle %}
            <img src="{{ block.settings.image | image_url: width: 1150, height: 1750 }}" alt="" width="350" height="400">
            
            
            {%- comment -%}
              <div class="tabs-container">
              <div class="tab-buttons" id="Events{{tabn}}">
                {%- assign eventmod = tabn | times: 7 -%}
                {% if block.settings.title-event1 != blank %}
                  <div
                    class="tab"
                    onclick="Changeevent({{ eventmod }})"
                    {%- if block.settings.image-event1 != blank -%}
                    style="background-image: url('{{ block.settings.image-event1 | image_url: width: 2000, height: 3500 }} ');"
