                <h3>{{ block.settings.title-event4 }}</h3>
                <a href="{{ block.settings.btnev4 }}" class="btn">{{ block.settings.btnevtxt4 }}</a>
                <p>{{ block.settings.text-event4 }}</p>

              </div>
              {%- assign eventmod = tabn | times: 11 -%}
