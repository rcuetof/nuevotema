                <h3>{{ block.settings.title-event5 }}</h3>
                <a href="{{ block.settings.btnev5 }}" class="btn">{{ block.settings.btnevtxt5 }}</a>
                <p>{{ block.settings.text-event5 }}</p>

              </div>
            </div>
            {%- endcomment -%}
          </div>

        {% endif %}
    {% endcase %}
    {%- assign tabn = tabn | plus: 1 -%}
  {% endfor %}
</div>
<script src="{{ 'eventos.js' | asset_url }}" defer="defer"></script>
<script src="{{ 'tab-container.js' | asset_url }}" defer="defer"></script>

