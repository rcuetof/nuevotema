                    style="background-image: url('{{ block.settings.image-event5 | image_url: width: 2000, height: 3500 }} ');"
                    {% endif %}>{{ block.settings.title-event5 }}</div>
                {% endif %}
              </div>
              {%- assign eventmod = tabn | times: 7 -%}
              <div id="event{{eventmod}}" class="event-content">
                <h3 >{{ block.settings.title-event1 }}</h3>
                <a href="{{ block.settings.btnev1 }}" class="btn">{{ block.settings.btnevtxt1 }}</a>
                <p>{{ block.settings.text-event1 }}</p>

              </div>
              {%- assign eventmod = tabn | times: 8 -%}
