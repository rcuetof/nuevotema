{%- assign tabn = 1 -%}
<div class="tabs-container">
    <div class="tab-buttons" id="tabContainer">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'text' %}
            {% if block.settings.title != blank %}
              <div class="tab" onclick="changeTab({{ tabn }})" 
                {%- if block.settings.image != blank -%} 
                  style="background-image: url('{{ block.settings.image | image_url: width: 2000, height: 3500 }} ');"
                {% endif %}>
                <h2>{{ block.settings.title }}</h2>
                <svg viewBox="0 0 32 32" xmlns="http://www.w3.org/2000/svg"><defs><style>.cls-1{fill:#d8e1ef;}.cls-2{fill:#0593ff;}.cls-3{fill:#0e6ae0;}</style></defs><title/><g id="Focus"><path class="cls-1" d="M29.93,15.54C28,10.35,22.49,7,16,7S4,10.35,2.07,15.54A.92.92,0,0,0,2,15.9V16a.92.92,0,0,0,.07.36c2,5.22,7.48,8.59,14,8.59S28,21.62,29.93,16.46A.92.92,0,0,0,30,16.1v-.2A.92.92,0,0,0,29.93,15.54Z"/><circle class="cls-2" cx="16" cy="16" r="6"/><path class="cls-3" d="M14,17a1,1,0,0,1-1-1,3,3,0,0,1,3-3,1,1,0,0,1,0,2,1,1,0,0,0-1,1A1,1,0,0,1,14,17Z"/><path class="cls-2" d="M3,8A1,1,0,0,1,2,7V3A1,1,0,0,1,3,2H7A1,1,0,0,1,7,4H4V7A1,1,0,0,1,3,8Z"/><path class="cls-2" d="M29,8a1,1,0,0,1-1-1V4H25a1,1,0,0,1,0-2h4a1,1,0,0,1,1,1V7A1,1,0,0,1,29,8Z"/><path class="cls-2" d="M7,30H3a1,1,0,0,1-1-1V25a1,1,0,0,1,2,0v3H7a1,1,0,0,1,0,2Z"/><path class="cls-2" d="M29,30H25a1,1,0,0,1,0-2h3V25a1,1,0,0,1,2,0v4A1,1,0,0,1,29,30Z"/></g></svg>
                </div>      
            {% endif %}
        {% endcase %}
        {%- assign tabn = tabn | plus: 1 -%}
      {% endfor %}
    </div>
    {%- assign tabn = 1 -%}
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'text' %}
          {% if block.settings.title != blank %}
            <div id="content{{ tabn }}" class="tab-content">
                <h3>{{ block.settings.title }}</h3>
                <a href="{{ block.settings.btn }}" class="btn">{{ block.settings.btntxt }}</a> 
                <p>{{ block.settings.text }}</p>
                

                <div class="tabs-container">
                  <div class="tab-buttons" id="Events{{tabn}}">
                    {%- assign eventmod = tabn | times: 7 -%}
                    {% if block.settings.title-event1 != blank %}<div class="tab" onclick="Changeevent({{ eventmod }})" {%- if block.settings.image-event1 != blank -%} 
                      style="background-image: url('{{ block.settings.image-event1 | image_url: width: 2000, height: 3500 }} ');"
                    {% endif %}>{{ block.settings.title-event1 }}</div>{% endif %}
                    {%- assign eventmod = tabn | times: 8 -%}
                    {% if block.settings.title-event2 != blank %}<div class="tab" onclick="Changeevent({{eventmod}})" {%- if block.settings.image-event2 != blank -%} 
                      style="background-image: url('{{ block.settings.image-event2 | image_url: width: 2000, height: 3500}} ');"
                    {% endif %}>{{ block.settings.title-event2 }}</div>{% endif %}
                    {%- assign eventmod = tabn | times: 9 -%}
                    {% if block.settings.title-event3 != blank %}<div class="tab" onclick="Changeevent({{eventmod}})" {%- if block.settings.image-event3 != blank -%} 
                      style="background-image: url('{{ block.settings.image-event3 | image_url: width: 2000, height: 3500}} ');"
                    {% endif %}>{{ block.settings.title-event3 }}</div>{% endif %}
                    {%- assign eventmod = tabn | times: 10 -%}
                    {% if block.settings.title-event4 != blank %}<div class="tab" onclick="Changeevent({{eventmod}})" {%- if block.settings.image-event4 != blank -%} 
                      style="background-image: url('{{ block.settings.image-event4 | image_url: width: 2000, height: 3500 }} ');"
                    {% endif %}>{{ block.settings.title-event4 }}</div>{% endif %}
                    {%- assign eventmod = tabn | times: 11 -%}
                    {% if block.settings.title-event5 != blank %}<div class="tab" onclick="Changeevent({{eventmod}})" {%- if block.settings.image-event5 != blank -%} 
                      style="background-image: url('{{ block.settings.image-event5 | image_url: width: 2000, height: 3500 }} ');"
                    {% endif %}>{{ block.settings.title-event5 }}</div>{% endif %}
                  </div>
                  {%- assign eventmod = tabn | times: 7 -%}
                  <div id="event{{eventmod}}" class="event-content" >
                    <h3>{{ block.settings.title-event1 }}</h3>
                    <a href="{{ block.settings.btnev1 }}" class="btn">{{ block.settings.btnevtxt1 }}</a>  
                    <p>{{ block.settings.text-event1 }}</p>
                                     
                  </div>
                  {%- assign eventmod = tabn | times: 8 -%}
                  <div id="event{{eventmod}}" class="event-content">
                    <h3>{{ block.settings.title-event2 }}</h3>
                    <a href="{{ block.settings.btnev2 }}" class="btn">{{ block.settings.btnevtxt2 }}</a>
                    <p>{{ block.settings.text-event2 }}</p>
                       
                  </div>
                  {%- assign eventmod = tabn | times: 9 -%}
                  <div id="event{{eventmod}}" class="event-content">
                    <h3>{{ block.settings.title-event3 }}</h3>
                    <a href="{{ block.settings.btnev3 }}" class="btn">{{ block.settings.btnevtxt3 }}</a>   
                    <p>{{ block.settings.text-event3 }}</p>
    
                  </div>
                  {%- assign eventmod = tabn | times: 10 -%}
                  <div id="event{{eventmod}}" class="event-content">
                    <h3>{{ block.settings.title-event4 }}</h3>
                    <a href="{{ block.settings.btnev4 }}" class="btn">{{ block.settings.btnevtxt4 }}</a>  
                    <p>{{ block.settings.text-event4 }}</p>
                     
                  </div>
                  {%- assign eventmod = tabn | times: 11 -%}
                  <div id="event{{eventmod}}" class="event-content">
                    <h3>{{ block.settings.title-event5 }}</h3>
                    <a href="{{ block.settings.btnev5 }}" class="btn">{{ block.settings.btnevtxt5 }}</a>   
                    <p>{{ block.settings.text-event5 }}</p>
          
                  </div>
                </div>
            </div>
        {% endif %}    
      {% endcase %}
      {%- assign tabn = tabn | plus: 1 -%}
    {% endfor %}
</div>
<script src="{{ 'eventos.js' | asset_url }}" defer="defer"></script>
<script src="{{ 'tab-container.js' | asset_url }}" defer="defer"></script>

